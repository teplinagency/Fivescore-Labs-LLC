{% stylesheet %}
  .featured-logo-sec{
    width: 100%;
    padding: 0px 40px;
  }
  .featured-logo-heading {
    font-size: 31.5px;
    font-weight: 400;
    line-height: 37px;
    text-align: center;
    color: #1c1d1d;
  }
  .logo-wraper {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
}
  .featured-logo{
    width: 25%;
    
  }
  .featured-logo .logo {
    width: 100%;
    height: 200px !important;
    object-fit: contain;
    padding: 0px 20px;
}
  .featured-logo-sec .slick-slide{
    padding: 0px 20px;
  }
  .featured-logo-sec .slick-next:before, .featured-logo-sec .slick-prev:before{
    color: #000 !important;
    font-size: 30px !important
  }

  @media(max-width: 768px){
      .featured-logo .logo {
    height: 130px !important;
}
  @media(max-width: 600px){
     .featured-logo{
    width: 50%;
    
  }
      .featured-logo .logo {
    height: 85px !important;
}
     .featured-logo-sec .slick-next:before, .featured-logo-sec .slick-prev:before{
    font-size: 15px !important
  }
{% endstylesheet %}




<div class="featured-logo-sec page-width">
  <h2 class="featured-logo-heading">{{ section.settings.featured_logo_sec_heading }}</h2>
    <div class="logo-wraper">
      {%- for block in section.blocks -%}
      <div class="featured-logo">
        <img class="logo" src="{{ block.settings.featured_logo  | image_url}}" loading="lazy"/>

      </div>
      {%- endfor -%}
    </div>
</div>
<script>
  $('.logo-wraper').slick({
  dots: false,
  autoplay: true,
  infinite: true,
  speed: 300,
  slidesToShow: 4,
  slidesToScroll: 1,
  responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 3,
        slidesToScroll: 1,
        infinite: true,
        dots: false
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 2,
        slidesToScroll: 2
      }
    }
 
  ]
});
</script> 


{% schema %}
  {
  "name": "farture logo sec",
  "class": "feature logo sec",
  "settings": [
    {
      "type": "text",
      "id": "featured_logo_sec_heading",
      "label": "Featured logo sec heading",
      "default": "As Featured In"
    }
  ],
  "blocks": [
    {
      "name": " logo",
      "type": "add_block",
      "settings": [
        {
          "type": "image_picker",
          "id": "featured_logo",
          "label": "Add featured logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "farture logo sec"
    }
  ]
}  
{% endschema %}


			

